    <script type="text/javascript">
        function login()
        {
            var username = $("#username").val();
            var pwd = $("#password").val();
            if (username == "" || pwd == "")
            {
                sysevt.showtip("用户名和密码不能为空");
                return;
            }
            var data = $("#loginform").serialize();
            $.ajax({
                url:"/user/loginx", data: data, type:"post", dataType:"json", success: function(r)
                {
                    if(r.Success)
                    {
                        location.href = "/";
                    }
                    else {
                        sysevt.showtip(r.Msg);
                    }
                }, error: function(r)
                {
                    sysevt.showtip("登录失败，请联系管理员");
                }
            });
        }
    </script>
